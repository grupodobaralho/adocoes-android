<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/teste1tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="PreferÃªncias"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="28dp" />

    <Button
        android:id="@+id/btn_salvarpref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="12dp"
        android:text="Salvar!" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teste1tv"
        android:layout_marginStart="22dp"
        android:layout_marginTop="214dp"
        android:text="Mostrar Lista"
        android:textSize="18dp" />


    <RadioGroup
        android:id="@+id/rg_lista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView20"
        android:layout_below="@+id/textView20"
        android:layout_marginTop="25dp">


        <RadioButton
            android:id="@+id/rb_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rb_vertical"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/rb_vertical"
            android:text="Horizontal" />

        <RadioButton
            android:id="@+id/rb_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView20"
            android:layout_below="@+id/textView20"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="19dp"
            android:checked="true"
            android:text="Vertical"
            android:textAlignment="textStart" />
    </RadioGroup>


    <GridLayout
        android:id="@+id/wv_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teste1tv">

        <WebView
            android:id="@+id/wv_trocaapi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_above="@+id/rg_lista"
            android:layout_below="@+id/teste1tv"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/textView20" />
    </GridLayout>

</RelativeLayout>