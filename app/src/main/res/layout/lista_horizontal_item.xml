<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_menor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/boy_2" />


    <ImageButton
        android:id="@+id/btn_favoritar"
        android:background="@null"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/like_filled"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hercilio"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:layout_above="@+id/tv_idade"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/tv_idade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="18 anos"
        android:textAlignment="center"
        android:layout_above="@+id/tv_sexo"/>

    <TextView
        android:id="@+id/tv_sexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Masculino"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>